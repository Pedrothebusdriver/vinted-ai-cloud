# Core webhooks (use your own IDs/tokens; never commit real URLs)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_DEFAULT_ID/YOUR_TOKEN
DISCORD_WEBHOOK_DRAFTS=${DISCORD_WEBHOOK_URL}
DISCORD_WEBHOOK_GENERAL=${DISCORD_WEBHOOK_URL}
DISCORD_WEBHOOK_AI_TEST=${DISCORD_WEBHOOK_URL}
DISCORD_WEBHOOK_ALERTS=

# Public base for draft links (set to Pi/mini-PC IP)
PUBLIC_BASE_URL=http://127.0.0.1:10000

# Manual upload security
# Comma-separated list of API keys required by /api/upload when exposed publicly
UPLOAD_API_KEYS=
# Max uploads per client IP within the configured window (set 0 to disable)
UPLOAD_RATE_LIMIT=20
# Sliding window size (seconds) for the rate limiter
UPLOAD_RATE_WINDOW_SECONDS=60

# Cloud helper comps endpoint (or Render URL)
COMPS_BASE_URL=http://127.0.0.1:5055
PI_INFER_URL=http://127.0.0.1:10000/api/infer?fast=1

# Discord bridge + relay (optional)
DISCORD_BRIDGE_CONFIG=${HOME}/secrets/discord_bot.json   # JSON with {"token":"","channel_ids":[...]}
# DISCORD_BRIDGE_TOKEN=                                   # override token via env if needed
# DISCORD_BRIDGE_CHANNELS=123456789012345678,987654321    # override channels via env
AGENT_RELAY_WEBHOOK_URL=

# Sampler defaults
SAMPLER_BUCKETS=jackets,hoodies,jeans,shirts,shoes
SAMPLER_PER_BUCKET=10
SAMPLER_TOTAL_LIMIT=50

# Compliance + pricing guard rails
COMPLIANCE_MIN_DIMENSION=240
COMPLIANCE_MAX_FACE_RATIO=0.35
COMPLIANCE_MAX_PERSON_RATIO=0.6
VINTED_PRICE_MIN_PENCE=50
VINTED_PRICE_MAX_PENCE=50000
